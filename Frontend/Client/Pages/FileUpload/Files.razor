@page "/files"

@inherits FilesModel

<h1>All Files</h1>

<table class="table table-bordered table-table-striped">
    <thead>
        <tr>
            <th>Name</th><th>Size</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var file in files) {
        <tr>
            <td>@file.FileName</td>
            <td>@file.Size</td>
        </tr>
        }
    </tbody>

</table>


